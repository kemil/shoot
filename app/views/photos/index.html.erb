<h1>Listing photos</h1>

<table>
  <tr>
    <th>Large file name</th>
    <th>Large content type</th>
    <th>Large file size</th>
    <th>Large updated at</th>
    <th>Thumb file name</th>
    <th>Thumb content type</th>
    <th>Thumb file size</th>
    <th>Thumb updated at</th>
    <th>Position</th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%=h photo.large_file_name %></td>
    <td><%=h photo.large_content_type %></td>
    <td><%=h photo.large_file_size %></td>
    <td><%=h photo.large_updated_at %></td>
    <td><%=h photo.thumb_file_name %></td>
    <td><%=h photo.thumb_content_type %></td>
    <td><%=h photo.thumb_file_size %></td>
    <td><%=h photo.thumb_updated_at %></td>
    <td><%=h photo.position %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>