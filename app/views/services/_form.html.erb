<% form_for(@service) do |service_form| %>
  <%= service_form.error_messages %>
  <p>
	<%= service_form.label :photography_type, "Photography Type" %><br />
	<%= service_form.text_field(:photography_type) %>
  </p> 
  <p>
	<%= service_form.label :content %><br />
	<%= fckeditor_textarea("service","content", :toolbarSet => 'Simple', :width => '50%', :height => '400px') %>
  </p>


  <p>
    <%= submit_tag 'Save Changes' %>
  </p>
<% end %>

<%= link_to 'Back', photographer_services_path %>